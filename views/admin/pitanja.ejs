    <link rel='stylesheet' href='/stylesheets/style.css'>
    <link rel='stylesheet' href='/stylesheets/forma2.css'>
</head>
<body>
<%-include('header.ejs')%>
<div class="container prvi">
    <div class="row">
        <p style="margin-top:30px; font-weight: bold;font-size: 20px; ">LISTA PITANJA</p>
        <div class="#" id="tabela-pitanja">
            <table class="table table-responsive-lg vidi-pitanja" id="tabelaPitanja">
                <thead>
                <tr>
                    <th scope="col">ID pitanja</th>
                    <th scope="col">Pitanje</th>
                    <th scope="col">ID Predavanja</th>
                    <th scope="col">Skriveno</th>
                    <th scope="col">Odgovoreno</th>
                    <th scope="col"> </th>
                </tr>
                </thead>
                <tbody>
                <%for (let i =0; i<pitanje.length; i++) {%>
                    <tr>
                        <td><%= pitanje[i].id_pitanja%></td>
                        <td><%= pitanje[i].sadrzaj_pitanja%></td>
                        <td><%= pitanje[i].id_predavanja%></td>
                        <td><%= pitanje[i].skriveno%></td>
                        <td><%= pitanje[i].odgovoreno%></td>
                        <td><a href="/admin/Pitanja/<%=pitanje[i].id_pitanja%>" class="btn btn-danger">OBRIÅ I</a></td>
                    </tr>
                <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>




</body>